<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Gamelog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/navy_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/navy_blue</item>
        <item name="colorOnSecondary">@color/navy_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_blue</item>
        <!-- Nav bar color. -->
        <item name="android:navigationBarColor">@color/dark_blue</item>
    </style>
    <style name="Theme.Gamelog.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Gamelog.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Gamelog.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>